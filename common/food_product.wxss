.product-input { width: 690rpx; background-color: #f5f5f5;height: 66rpx; margin: 0 auto; line-height: 66rpx; border-radius: 10rpx;margin-top:16rpx;}
.product-input input { font-size: 32rpx; padding-top: 6rpx; color: #999;width: 100%;}
.product-input image { width: 50rpx; height: 50rpx; margin: 8rpx 10rpx 0 20rpx;}
.product-view { margin: 20rpx 0 0 30rpx;}
.product-left { width: 200rpx; background: #f5f5f5;}
.product-left view { width: 100%; height: 96rpx;line-height: 96rpx;}
.product-left .active { background: #fff;}
/* 右 */
.product-right { width: 470rpx; margin-right: 30rpx;}
.right-view {border-bottom: 2rpx solid #ccc; padding-bottom: 20rpx; margin-bottom: 20rpx;}
.right-view image { width: 128rpx; height: 128rpx; margin-top: 20rpx;}
.right-title { margin-left: 12rpx;}
.right-title .title-name { margin-top: 20rpx; width: 320rpx;}
.right-title .title-money { margin-top: 30rpx; color: #ccc;}
.right-title .title-money text { color: #EE2B2B; font-weight: 600; padding-right: 20rpx;}
/* scroll-view滚动条隐藏 */
::-webkit-scrollbar{ width: 0; height: 0; color: transparent;}