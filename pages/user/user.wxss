.user-img{ padding-left: 30rpx;}
.user-img > view:nth-child(1) { width: 144rpx; height: 144rpx; border-radius: 72rpx; overflow: hidden;}
.user-img > view > image { width: 144rpx; height: 144rpx;}
.user-name { margin: 20rpx 0 0 20rpx; width: 370rpx;}
.user-name > text { font-size: 44rpx; font-weight: bold;}
.user-details { margin-bottom: 70rpx;}
.user-details .user-approve image { width: 28rpx; height: 28rpx; vertical-align: middle; margin: 8rpx 4rpx 0 12rpx;}
.user-details .user-approve { margin-top: 16rpx; height: 44rpx; line-height: 44rpx; color: #000; border-radius: 22rpx;}
.user-details .user-account { margin-top:50rpx; color: #fff; width: 208rpx; height: 64rpx; background:linear-gradient(270deg,rgba(255,170,16,1) 0%,rgba(247,107,28,1) 100%); border-radius:32rpx 0px 0px 32rpx;}
.user-account > image { width: 36rpx; height: 36rpx; margin:15rpx 20rpx 0 18rpx;}
.user-account view{ line-height: 64rpx;}
.user-enroll { height: 88rpx; line-height: 88rpx; color: #333333;}
.user-enroll image { width: 40rpx; height: 40rpx; margin-top: 24rpx;}
/* 弹窗 */
.view-content { background: #fff; border-radius: 16rpx; top: 40%; left:30rpx; right: 30rpx; z-index: 1001;}
.view-character { margin-top:30rpx; color: #333;}
.view-btn { margin-top: 30rpx; border-top: 2rpx solid #ccc;}
.view-btn > view { width: 100%; padding: 30rpx 0; color: #333;}
.view-title { color: #ccc; margin-top: 20rpx;}
.view-btn > view:nth-child(1) { border-right: 2rpx solid #ccc;}
/* login */
.userLogin { width: 160rpx; height: 60rpx; line-height: 60rpx;  margin: 42rpx 0 0 16rpx;}
/* type of service */
.typeShadow { top: 0; left: 0; bottom: 0; right: 0; background: rgba(0,0,0,0.5); z-index: 1000;}
.typeShadow.opacity0 { opacity: 1; animation: opacity0 0.2s 0.4s linear forwards;}
@keyframes opacity0 {
  0% { opacity: 1;}
  50% { opacity: 0.5;}
  100% { opacity: 0;}
}
.typeShadow.opacity1 { opacity: 1; animation: opacity1 0.2s linear forwards;}
@keyframes opacity0 {
  0% { opacity: 0;}
  50% { opacity: 0.5;}
  100% { opacity: 1;}
}
.typeContent { left: 30rpx; background: #fff; color: #000; z-index: 1001; width: 690rpx; border-radius: 16rpx; top: 100%;}
.typeContent.content0 { animation: content0 0.5s linear forwards;}
@keyframes content0 {
  0% { top: 33%;}
  50% { top: 67%;}
  100% { top: 100%;}
}
.typeContent.content1 { animation: content1 0.5s 0.2s linear forwards;}
@keyframes content1 {
  0% { top: 100%;}
  50% { top: 67%;}
  100% { top: 33%;}
}
.typeContent > view { height: 88rpx; line-height: 88rpx; margin: 0 30rpx;}
.typeContent image { width: 30rpx; height: 30rpx; margin-top: 29rpx;}
.typeContent .typeHint { color: #999; height: auto; line-height: 50rpx;}
.typeSubmit { margin: 20rpx 30rpx 40rpx; color: #fff; background: #37cf6b; height: 66rpx; line-height: 66rpx;}
.typeContent .rechange-lineu { height: 2rpx; background: #EEE; margin: 0;}
