.content { width: 100%; height: 100%; background: #f5f5f5;}
.view-order { width: 650rpx; margin: 0 auto; background: #fff; padding: 0 20rpx 10rpx; border-radius: 10rpx; margin-bottom: 20rpx;}
.order-title { height: 66rpx; line-height: 66rpx; padding-top: 6rpx;}
.order-phone, .order-timer { height: 60rpx; line-height: 60rpx; color: #999;}
.order-tim view { background: #37CF6B; color: #fff; padding: 0 30rpx; height: 50rpx; line-height: 48rpx; margin-top: 5rpx; border-radius: 20rpx;}
.order-tim { color: #fff;}
.order-tim .perfect { color: #999;}
.order_distance { margin-right: 32rpx;}